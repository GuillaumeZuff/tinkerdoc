template(name="docNavigation")
    ul.docNavigation.collapsible(id="#nav_{this.path}" data-collapsible="accordion")
        each navItems
            +docNavigationTree item=this isRoot=true level=1

template(name="docNavigationTree")
    if item.label
        li(class=liClass)
            if item.children
                div(class=headerClass) {{_ item.label}}
                div.collapsible-body.navigationBlock
                    ul.docNavigation.collapsible(id="nav_#{item.path}" data-collapsible="accordion")
                        each item.children
                            +docNavigationTree item=this level=nextLevel
            else
                | {{_ item.label}}
