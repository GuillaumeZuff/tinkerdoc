template(name="docWidget_image")
    div.card.z-depth-2
        +docCardTitleAndContent
        div.card-image
            +docCardDisplayImage

template(name="docWidget_imageLeft")
    div.card.z-depth-2
        div.row
            div.col.m6.s12
                div.card-image
                    +docCardDisplayImage
            div.col.m6.s12
                +docCardTitleAndContent

template(name="docWidget_imageRight")
    div.card.z-depth-2
        div.row
            div.col.m6.s12
                +docCardTitleAndContent
            div.col.m6.s12
                div.card-image
                    +docCardDisplayImage

